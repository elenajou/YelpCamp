<% layout('/layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card shadow mb-5">
            <div class="card-body">
                <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" required>
                        <dir class="valid-feedback">
                            Looks Good!
                        </dir>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" required>
                        <dir class="valid-feedback">
                            Looks Good!
                        </dir>
                    </div>
                    <!-- <div class="mb-3">
                        <label class="form-label" for="image">Image Url</label>
                        <input class="form-control" type="text" id="image" name="campground[image]" required>
                        <dir class="valid-feedback">
                            Looks Good!
                        </dir>
                    </div> -->
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                        <dir class="valid-feedback">
                            Looks Good!
                        </dir>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input class="form-control" type="text" placeholder="0.00" aria-label="price" id="price" aria-descripbedby="price-label" name="campground[price]" required>
                            <dir class="valid-feedback">
                                Looks Good!
                            </dir>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Images</label>
                        <input class="form-control" type="file" id="image"  name="image" multiple>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success w-100">Add Campground</button>
                    </div>
                </form>
                <a href="/campgrounds">All Campgrounds</a>
            </div>
        </div>
    </div>
</div>
