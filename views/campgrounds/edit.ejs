<% layout('/layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>" required>
                <dir class="valid-feedback">
                    Looks Good!
                </dir>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>" required>
                <dir class="valid-feedback">
                    Looks Good!
                </dir>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" value="<%=campground.image%>" required>
                <dir class="valid-feedback">
                    Looks Good!
                </dir>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required><%=campground.description%></textarea>
                <dir class="valid-feedback">
                    Looks Good!
                </dir>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input class="form-control" type="text" placeholder="0.00" aria-label="price" id="price" aria-descripbedby="price-label" name="campground[price]" value="<%=campground.price%>" required>
                </div>
                <dir class="valid-feedback">
                    Looks Good!
                </dir>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <p><a href="/campgrounds/<%=campground._id%> ">Back to Campground</a></p>
    </div>
</div>

